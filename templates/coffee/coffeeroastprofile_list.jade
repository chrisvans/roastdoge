{% extends 'base.jade' %}
{% load staticfiles %}

{% block css %}
link(href='{% static "css/object/object_list.css" %}', rel='stylesheet', type='text/css', media='screen')
{% endblock css %}

{% block content %}

h3 List of Profiles
h4
  a(href="{% url 'coffee-list' %}") Back to Coffee

ul
  {% for profile in roastprofile_list %}
  li(id="id_object_{{profile.id}}")
    i.fa.fa-times.object-delete(id="{{profile.id}}", title="Delete Profile")
    a(href="{% url 'roastprofile-detail' profile.id %}") {{ profile.name }}
  {% endfor %}

{% endblock content %}

{% block javascripts %}
// TODO: This script should be an include. with object=object?
script
  var objectListURL = "{% url 'rest-'|add:object_label|add:'-list' %}";

script(src="{% static 'javascripts/ajaxModels/setupAjax.js' %}")
script(src="{% static 'javascripts/ajaxModels/baseAjaxModel.js' %}")
script(src="{% static 'javascripts/ajaxModels/tempPoint.js' %}")
script(src="{% static 'javascripts/ajaxModels/roastProfile.js' %}")
script(src="{% static 'javascripts/object/object_list.js' %}")
{% endblock javascripts %}
